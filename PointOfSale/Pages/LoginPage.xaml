             xmlns:viewmodels="clr-namespace:PointOfSale.Pages"
             x:Class="PointOfSale.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             x:DataType="viewmodels:LoginViewModel"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            TextColor="{StaticResource White}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="GoDashboard" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>